{
  "name": "facilities-vendor-api",
  "version": "1.0.0",
  "description": "役所設備管理システム - 業者向けAPI",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "aws-xray-sdk-core": "^3.5.3",
    "aws-xray-sdk-express": "^3.5.3",
    "aws-xray-sdk-postgres": "^3.5.3",
    "pg": "^8.11.3",
    "aws-sdk": "^2.1490.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.7",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "facilities",
    "management",
    "api",
    "aws",
    "x-ray",
    "tracing"
  ],
  "author": "Facilities Management Team",
  "license": "UNLICENSED"
}
